@model IEnumerable<Store.Web.ViewModels.CategoryViewModel>


<div id="SiteNav" class="site-nav" role="menu">
    <ul class="list--nav">
        @foreach (var category in Model.Where(x => x.ParentId == null))
        {

            var categoryName = category.Name;
            var childCategories = Model.Where(x => x.ParentId == category.Id).OrderBy(x => x.Name);


            if (childCategories.Count() > 0)
            {

                var menuClass = "site-nav--has-submenu site-nav__element";

                <li class="@menuClass">
                    <button class="site-nav__link btn--link  site-nav__expand hidden" aria-expanded="false" aria-controls="Collapsible1">
                        @categoryName
                        <span>+</span>
                    </button>
                    <button class="site-nav__link btn--link site-nav__collapse" aria-expanded="true" aria-controls="Collapsible1">
                        @categoryName
                        <span>-</span>
                    </button>
                    <ul id="Collapsible1" class="site-nav__submenu site-nav__submenu--expanded" aria-hidden="false">
                        @foreach (var childCategory in childCategories)
                        {
                            var childUrl = "/" + childCategory.Alias + "-nhom-" + childCategory.Id;


                            <li class="">
                                <a href="@childUrl" class="site-nav__link">@childCategory.Name</a>
                            </li>
                        }
                    </ul>

                </li>
            }
            else
            {
                var url = "/" + category.Alias;
                <li class="site-nav__element ">
                    <a href="@url" class="site-nav__link">@categoryName</a>
                </li>
            }
        }




    </ul>



