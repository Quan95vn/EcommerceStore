@model List<Store.Web.ViewModels.ShoppingCartViewModel>
@{
    ViewBag.Title = "Đặt hàng thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section headerCSS {
    <link href="~/assets/client/font-awesome-4.6.3/css/font-awesome.min.css" rel="stylesheet" />
}

<h2>Cảm ơn bạn đã mua hàng tại QuanStore.com, check email để xem lại đơn hàng của bạn. Chúng tôi sẽ liên lạc với bạn sớm nhất có thể. Click vào <a href="/" style="text-decoration:underline;">đây</a> để trở về trang chủ</h2>

<div class="grid">
    <div class="grid__item">
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <td style="width:10%"></td>
                        <td style="width:25%">Tên sản phẩm</td>
                        <td style="width:20%">Hình ảnh</td>
                        <td style="width:15%">Giá</td>
                        <td style="width:15%">Số lượng</td>
                        <td style="width:15%">Thành tiền</td>
                    </tr>
                </thead>
                <tbody>

                    @for (var i = 0; i < Model.Count; i++)
                    {
                        var productPrice = Model[i].Product.PromotionPrice.HasValue
                            ? Model[i].Product.PromotionPrice.Value : Model[i].Product.Price;
                            <tr>
                                <td>
                                    <span class="finish"><i class="fa fa-check" aria-hidden="true"></i></span>
                                </td>
                                <td>
                                    @Model[i].Product.Name
                                </td>
                                <td>
                                    <img src="@Model[i].Product.ThumbImage" height="100" />
                                </td>
                                <td>
                                    @productPrice.ToString("N0")
                                </td>
                                <td>
                                    @Model[i].Quantity
                                </td>
                                <td>
                                    <strong>@((productPrice * Model[i].Quantity).ToString("N0"))</strong>
                                </td>
                            </tr>
                    }

                </tbody>


                
            </table>


            
            
        </div>
    </div>
</div>
